# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Pour développement local avec Docker
MONGODB_URI=mongodb://statcoach:statcoach_secret@localhost:27017/statcoach_pro?authSource=admin

# Pour tests (utilise MongoDB Memory Server)
MONGODB_TEST_URI=mongodb://localhost:27017/statcoach_pro_test

# Pour développement local sans Docker
# MONGODB_URI=mongodb://localhost:27017/statcoach_pro

# Authentication
# IMPORTANT: Change this to a strong, random secret in production
JWT_SECRET=your-very-secret-jwt-key-change-this-in-production

# Sync Configuration
SYNC_BATCH_SIZE=50
SYNC_RETRY_ATTEMPTS=3
